pageHeight = 98vh
pageWidth  = 'calc(0.75609756097560975609756097560976 * %s)' % (pageHeight)
characterSize = 'calc(2 / 41 * %s)'  % pageHeight
fontSize = 'calc(%s / 4)' % characterSize

*
  box-sizing: border-box
  font-size: fontSize
  margin: 0
  padding: 0

.line 
  position: absolute
  width: 1px
  background: lightblue
  z-index: -1
  height: characterSize

.page
  align-items: flex-start
  border: gray 1px solid 
  box-shadow: 5px 5px 5px silver, -5px -5px 5px silver
  display: flex
  height: pageHeight
  left: 50%
  margin: 1vh
  padding: 'calc(%s / 4)' % characterSize 
  position: absolute
  transform: translate(-50%)
  width: pageWidth

.column
  display: inherit
  flex-direction: column
  flex-wrap: nowrap
  max-height: pageHeight
  width: 'calc(%s * 2)' % characterSize

.row
  display: inherit
  flex-direction: row
  flex-wrap: nowrap
  max-height: pageWidth


.section
  align-items: stretch
  border-right: lightblue 2px solid 
  // border-top: lightblue 2px solid 
  display: inherit 
  flex-direction: column 
  flex-wrap: wrap
  width: 'calc(%s * 2)' % characterSize
  z-index: 1

  & .word-note
    // background-color: #E3E5E6
    // border-top: lightblue 2px solid
    // border-bottom: lightblue 2px solid
    display: inherit
    flex-direction: row
    flex-wrap: nowrap

  & .character-note
    display: inherit
    // height: 'calc(%s * 2)' % characterSize
    width: 'calc(%s * 2)' % characterSize
    flex-wrap: wrap
   & .word-character-note
    display: inherit
    // height: 'calc(%s * 2)' % characterSize
    width: 'calc(%s )' % characterSize
    flex-wrap: wrap

  & .square
    border-top: lightblue 1px solid
    border-right: lightblue 1px solid
    display: inherit 
    height: characterSize
    width: characterSize
    justify-content: center
    z-index: 1
    position: relative
    &:before 
        border-top: lightblue 1px solid 
        content:""
        margin: 0 auto /* this centers the line to the full width specified */
        position: absolute /* positioning must be absolute here, and relative positioning must be applied to the parent */
        top: 50% 
        left: 0 
        right: 0 
        bottom: 0
        width: characterSize
        z-index: -1
    
    &.tittle
      align-items: center
      border: none 
      border-top: salmon  3px solid
      border-bottom: salmon  3px solid
      display: inherit 
      height: characterSize
      justify-content: start
      width: 100%
      position: relative
      z-index: 1
      & .square
        z-index: -1

      & h1
        font-size: 1.25rem
        margin-right: 2rem 
        position: absolute
        text-align: right
        width: calc(100% - 2rem)
        z-index: 2

    &.character
      align-items: center
      & p
        font-size: 2.75vw
        position: absolute
        z-index: 1

    &.meaning
      font-size: 'calc(%s /2.5)' % characterSize
      align-items: center
      & p
        font-size: 'calc(%s /2.5)' % characterSize
        align-items: center
      
    &.pronunciation
      font-size: 'calc(%s /2)' % characterSize
      z-index: 1
      & p
        font-size: 'calc(%s /2)' % characterSize
        z-index: 1


  
